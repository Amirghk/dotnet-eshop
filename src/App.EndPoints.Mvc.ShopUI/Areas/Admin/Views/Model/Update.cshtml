@model ModelUpdateViewModel


<div class="row">
    <div class="col-md-4">
        <form asp-controller="Model" asp-action="Update" method="post">
            <div class="form-group">
                <label asp-for=Name></label>
                <input type="text" class="form-control" asp-for=Name>
            </div>
            <div class="form-group">
                <select asp-for="BrandId"  class="form-control" asp-items="@ViewBag.Brands">
                        <option selected disabled>انتخاب کنید</option>
                    </select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="ParentModelId"  class="form-control" asp-items="@ViewBag.Models">
                        <option selected value="0">بدون والد</option>
                    </select>
                    <span asp-validation-for="ParentModelId" class="text-danger"></span>
            </div>
            <div class="form-check-inline mx-0 my-1">
                <input asp-for=IsDeleted class="form-check-input" type="checkbox" value="True" />
                <label class="form-check-label mx-1" asp-for=IsDeleted>
                </label>
            </div>
            <button type="submit" class="btn btn-primary">ویرایش</button>
        </form>
    </div>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}


