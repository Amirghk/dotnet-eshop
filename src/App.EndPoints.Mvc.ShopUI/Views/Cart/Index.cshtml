@model List<App.EndPoints.Mvc.ShopUI.Models.CartItemViewModel>

<div class="single-row-slider-tab-area section-space">
    <div class="container">           
        <div class="row">
            <div class="col-lg-12">

                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <td>عکس محصول</td>
                        <td>نام محصول</td>
                        <td>تعداد درخواستی</td>
                        <td>قیمت واحد</td>
                    </tr>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td><img src="~/upload/@item.ImageName" class="img-fluid col-3" alt=""></td>
                            <td>@item.ProductName</td>
                            <td>@item.Count</td>
                            <td>@item.ProductPrice</td>
                        </tr>
                    }                        
                </table>
                <input type="submit" class="btn btn-success" value="ثبت نهایی و خرید"/>
            </div>
        </div>
    </div>
</div>
